{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "./dist/declarations"
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
